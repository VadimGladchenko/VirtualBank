<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/white</item>
    </style>

    <!-- Login and registration activity -->
    <style name="LoginTextInputError">
        <item name="android:textColor">@color/red</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="LoginTextInputLabel">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">@color/white</item>
        <item name="android:textSize">18sp</item>
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="android:textColor">@color/white</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/white</item>

    </style>

    <!-- Fragment Dialogs -->
    <style name="DialogTextInputError">
        <item name="android:textColor">@color/red</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="DialogTextInputLabel">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">@color/gray_dove</item>
        <item name="android:textSize">18sp</item>
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="android:textColor">@color/gray_dove</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@color/gray_dove</item>
        <item name="colorControlActivated">@color/colorPrimaryDark</item>
    </style>

    <!--Text styles-->
    <style name="Text">
        <item name="android:textSize">18sp</item>
        <item name="fontFamily">sans-serif</item>
    </style>

    <style name="Text.Primary">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Text.HeaderBlack">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">28sp</item>
    </style>

    <style name="Text.HeaderWhite">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">28sp</item>
    </style>

    <style name="Text.Primary.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text.Secondary">
        <item name="android:textColor">@color/gray_dove_light_3</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!--Buttons styles  -->
    <style name="ButtonMain" parent="Text.Secondary">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/button_main_ripple</item>
    </style>

    <style name="ButtonSecond" parent="Text.Secondary">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@drawable/button_second_ripple</item>
    </style>

    <!--Activity card styles  -->
    <style name="ActionButton">
        <item name="android:clickable">true</item>
        <item name="android:padding">30dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@drawable/layout_ripple</item>
    </style>

    <style name="ActionButtonImage">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_weight">10</item>
    </style>

    <style name="ActionButtonText" parent="Text.Secondary">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textAlignment">center</item>
        <item name="android:singleLine">true</item>
    </style>
</resources>
